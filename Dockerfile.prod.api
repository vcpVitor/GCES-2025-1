FROM node:18-slim AS builder

WORKDIR /app/www

# Copia todo o frontend
COPY www/ /app/www/

# Instala apenas dependências de produção (ignora testes/lint/etc)
RUN npm install --omit=dev && npm run build && npm run export

# Etapa 2: Nginx para servir os arquivos estáticos
FROM nginx:stable-alpine

COPY --from=builder /app/www/out /usr/share/nginx/html
COPY nginx/conf/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
